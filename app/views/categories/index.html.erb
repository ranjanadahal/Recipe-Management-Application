<%= link_to 'New Recipe', new_category_path %>
<h1>Listing Categories</h1>
<table class="table">
<thead>
  <tr>
    <th>Category</th>
    <th colspan="3">Action</th>
  </tr>
  </thead>
  <tbody>
    <% @category.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Show', category_path(category),class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-info" %></td>
      <td><%= link_to 'Destroy', category_path(category), class: "btn btn-danger",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


