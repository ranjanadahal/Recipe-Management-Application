<%= link_to 'New Recipe', new_recipe_path %>
<table id="dttb" class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Descreption</th>
      <th scope="col">Category</th>
      <th scope="col">Ingredients</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.title %></td>
      <td><%= recipe.description %></td>
      <td><%= recipe.category.name %></td>
      <td><% recipe.ingredients.each do |ingredient| %>
          <%= ingredient.name %>
      <% end %> </td>
      <td><%= link_to 'Show', recipe_path(recipe),class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_recipe_path(recipe),class: "btn btn-info" %></td>
      <td><%= link_to 'Destroy', recipe_path(recipe), class: "btn btn-danger",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>