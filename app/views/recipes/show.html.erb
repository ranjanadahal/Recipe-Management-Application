<%= image_tag @recipe.image.url, class: "recipe_image" %>
<h1>
  <%= @recipe.title %>
  </h1>
  <p class="description">
    <%= @recipe.description %>
  </p>
  <h2>Comments</h2>
<% @recipe.comments.each do |comment| %>
  <p>
    <%= comment.comment %>
  </p>
<% end %>
<%= form_with(model: [ @recipe, @recipe.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :comment %><br>
    <%= form.text_area :comment %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
  <%= link_to "Back", root_path, class: "btn btn-default" %>
  <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-default" %>
  <%= link_to "Delete",recipe_path(@recipe),method: :delete, data: {confirm: "Are you sure" }, class: "btn btn-default" %>

