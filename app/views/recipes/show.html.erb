<div class="main_content">
  <div class="row" id="recipe_top">
    <div class="col-md-4">
      <%= image_tag @recipe.image.url, class: "recipe_image" %>
    </div>
    <div class="col-md-8">
      <div id="recipe_info">
        <h1>
          <%= @recipe.title %>
        </h1>
        <p class="description">
          <%= @recipe.description %>
        </p>
        <h2>Category</h2>
    <p class="description">
        <%= @recipe.category.name %>
      </p>
        <p>
    Submitted By:
  <%= @recipe.user.email %>
</p>

      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div id="ingredients">
        <h2>Ingredients</h2>
        <ul>
          <% @recipe.ingredients.each do |ingredient| %>
            <li>
              <%= ingredient.name %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-6">
      <div id="directions">
        <h2>Prepration Process</h2>
        <ul>
          <% @recipe.directions.each do |direction| %>
            <li>
              <%= direction.step %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
 <div class="row">
  <div class="col-md-12">
   <h2>Comments</h2>
	<% @recipe.comments.each do |comment| %>
  	<p>
    		<%= comment.comment %>
  	</p>
	<% end %>
	<%= form_with(model: [ @recipe, @recipe.comments.build ], local: true) do |form| %>
      <p>
        <%= form.text_area :comment , input_html: { class: 'form-control' } %>
  </p>
  <p>
  <%= form.button :comment, class: "btn btn-primary" %>
  </p>
<% end %>
  <%= link_to "Back", root_path, class: "btn btn-default" %>
  <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-default" %>
  <%= link_to "Delete",recipe_path(@recipe),method: :delete, data: {confirm: "Are you sure" }, class: "btn btn-default" %>

  </div>

 </div>
</div>